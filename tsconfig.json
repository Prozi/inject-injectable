{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2016" /* Modules */,
    "module": "commonjs" /* Emit */,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "rootDir": "./src",
    "outDir": "./dist",
    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    /* Type Checking */
    "strict": true,
    /* Completeness */
    "skipLibCheck": true
  }
}
